<section class="hero" id="top">
  <div class="hero-inner">
    <div class="hero-circle-wrap">
      <div class="hero-photo-wrap">
        <img src="/trent.png" alt="Trent Morrell" class="hero-photo" />
      </div>
      <div class="hero-circle" aria-hidden="true">
        <svg viewBox="0 0 200 200" class="circle-text">
          <defs>
            <path id="circlePath" d="M 100,100 m -75,0 a 75,75 0 1,1 150,0 a 75,75 0 1,1 -150,0" />
          </defs>
          <text>
            <textPath href="#circlePath">
              CODE &bull; CRAFT &bull; BUILD &bull; SHIP &bull; CODE &bull; CRAFT &bull; BUILD &bull; SHIP &bull;
            </textPath>
          </text>
        </svg>
      </div>
    </div>

    <h1 class="hero-name">Trent Morrell</h1>
    <p class="hero-title">
      <span>Software Engineer</span>
      <span class="title-dot"> · </span>
      <span>Builder</span>
      <span class="title-dot"> · </span>
      <span>Vibe Coder</span>
    </p>
    <p class="hero-location">Dallas, Texas</p>
  </div>
</section>

<style>
  .hero {
    background: var(--salmon);
    padding: var(--space-2xl) var(--space-md);
    text-align: center;
    position: relative;
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-inner {
    position: relative;
    z-index: 1;
  }

  .hero-circle-wrap {
    position: relative;
    width: 300px;
    height: 300px;
    margin: 0 auto var(--space-lg);
  }

  .hero-photo-wrap {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 180px;
    height: 180px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid var(--black);
  }

  .hero-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 25%;
    transform: scale(1.8) translate(5%, -5%);
  }

  .hero-circle {
    width: 300px;
    height: 300px;
    animation: spin 20s linear infinite;
    position: relative;
  }

  .circle-text {
    width: 100%;
    height: 100%;
  }

  .circle-text text {
    font-family: var(--font-body);
    font-size: 10px;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    fill: var(--black);
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .hero-name {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 5.5rem);
    line-height: 1.1;
    letter-spacing: var(--ls-wider);
    margin-bottom: var(--space-sm);
    max-width: 100%;
    overflow-wrap: break-word;
    word-break: break-word;
  }

  .hero-title {
    font-family: var(--font-heading);
    font-size: clamp(1.2rem, 2.5vw, 2rem);
    letter-spacing: var(--ls-wider);
    margin-bottom: var(--space-md);
  }

  .hero-location {
    font-family: var(--font-body);
    font-size: 0.85rem;
    letter-spacing: var(--ls-widest);
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 70vh;
      padding: var(--space-xl) var(--space-sm);
    }

    .hero-circle-wrap {
      width: 220px;
      height: 220px;
    }

    .hero-circle {
      width: 220px;
      height: 220px;
    }

    .hero-photo-wrap {
      width: 130px;
      height: 130px;
    }

    .hero-name {
      letter-spacing: 0.1em;
    }

    .hero-title {
      letter-spacing: 0.2em;
      display: flex;
      flex-direction: column;
      gap: 0.15em;
    }

    .title-dot {
      display: none;
    }
  }
</style>
