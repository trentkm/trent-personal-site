<div id="vespa-overlay" class="overlay">
  <button id="vespa-close" class="close-btn close-btn-desktop" aria-label="Close game">&times;</button>
  <a href="#top" id="vespa-back" class="close-btn close-btn-mobile" aria-label="Back to home">&larr; Home</a>
  <canvas id="vespa-canvas"></canvas>
  <div id="vespa-start" class="start-screen">
    <p class="start-title">Shred Run</p>
    <p class="start-sub start-sub-desktop">Press Space or Tap to Start</p>
    <p class="start-sub start-sub-mobile">Tap to Start</p>
  </div>
</div>

<script>
  const overlay = document.getElementById('vespa-overlay')!;
  const closeBtn = document.getElementById('vespa-close')!;
  const canvas = document.getElementById('vespa-canvas') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d')!;
  const startScreen = document.getElementById('vespa-start')!;

  // --- Colors ---
  const C = {
    skyTop: '#4A6FA5',
    skyBot: '#8AADD4',
    snow: '#F0F4F8',
    snowShadow: '#D8E2EC',
    snowDark: '#C5D3E0',
    mountain: '#7B8FA8',
    mountainLight: '#9AAFC4',
    mountainSnow: '#E8EFF5',
    treeDark: '#2D5A3D',
    treeMid: '#3A7A52',
    treeLight: '#4A9A65',
    trunk: '#5C3D2E',
    rock: '#5A6B7A',
    rockLight: '#7A8B9A',
    black: '#1a1a1a',
    white: '#FFFFFF',
    cream: '#F5EDE4',
    salmon: '#E8A091',
    jacket: '#E8A091',
    pants: '#1a1a1a',
    board: '#D4951B',
    goggles: '#D4951B',
  };

  // --- Game state ---
  let W = 800;
  let H = 400;
  let ground = 0;
  let running = false;
  let gameOver = false;
  let score = 0;
  let highScore = 0;
  let speed = 4;
  let frameCount = 0;

  // Player (snowboarder)
  const player = {
    x: 80,
    y: 0,
    w: 40,
    h: 48,
    vy: 0,
    jumping: false,
    grounded: true,
  };

  const GRAVITY = 0.6;
  const JUMP_FORCE = -12;

  // Obstacles
  type Obstacle = { x: number; type: number; w: number; h: number };
  let obstacles: Obstacle[] = [];
  let spawnTimer = 0;
  const SPAWN_INTERVAL_MIN = 60;
  const SPAWN_INTERVAL_MAX = 120;
  let nextSpawn = 90;

  // Background mountains
  type Mountain = { x: number; w: number; h: number; layer: number };
  let mountains: Mountain[] = [];

  // Background trees
  type BgTree = { x: number; h: number; shade: number };
  let bgTrees: BgTree[] = [];

  // Snowflakes
  type Flake = { x: number; y: number; r: number; vx: number; vy: number };
  let flakes: Flake[] = [];

  // Snow texture bumps
  type Bump = { x: number; y: number; w: number; h: number };
  let bumps: Bump[] = [];

  function resize() {
    const dpr = window.devicePixelRatio || 1;
    const rect = overlay.getBoundingClientRect();
    W = rect.width;
    H = rect.height;
    canvas.width = W * dpr;
    canvas.height = H * dpr;
    canvas.style.width = W + 'px';
    canvas.style.height = H + 'px';
    ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
    ground = H * 0.65;
  }

  function initMountains() {
    mountains = [];
    // Far layer
    let mx = -50;
    while (mx < W + 300) {
      const mw = 150 + Math.random() * 200;
      const mh = 100 + Math.random() * 80;
      mountains.push({ x: mx, w: mw, h: mh, layer: 0 });
      mx += mw * 0.6;
    }
    // Near layer
    mx = -30;
    while (mx < W + 300) {
      const mw = 100 + Math.random() * 150;
      const mh = 60 + Math.random() * 60;
      mountains.push({ x: mx, w: mw, h: mh, layer: 1 });
      mx += mw * 0.7;
    }
  }

  function initBgTrees() {
    bgTrees = [];
    for (let tx = 0; tx < W + 200; tx += 30 + Math.random() * 50) {
      bgTrees.push({
        x: tx,
        h: 30 + Math.random() * 40,
        shade: Math.random(),
      });
    }
  }

  function initFlakes() {
    flakes = [];
    for (let i = 0; i < 60; i++) {
      flakes.push({
        x: Math.random() * W,
        y: Math.random() * H,
        r: 1 + Math.random() * 2,
        vx: -0.5 + Math.random() * -1,
        vy: 0.5 + Math.random() * 1.5,
      });
    }
  }

  function initBumps() {
    bumps = [];
    for (let bx = 0; bx < W + 100; bx += 15 + Math.random() * 12) {
      bumps.push({
        x: bx,
        y: ground + 8 + Math.random() * 40,
        w: 10 + Math.random() * 12,
        h: 3 + Math.random() * 4,
      });
    }
  }

  function reset() {
    score = 0;
    speed = 4;
    frameCount = 0;
    player.y = ground - player.h;
    player.vy = 0;
    player.jumping = false;
    player.grounded = true;
    obstacles = [];
    spawnTimer = 0;
    nextSpawn = 90;
    gameOver = false;
    initMountains();
    initBgTrees();
    initFlakes();
    initBumps();
  }

  function spawnObstacle() {
    const types = [0, 1, 2]; // rock, log, snowman
    const t = types[Math.floor(Math.random() * types.length)];
    let w = 20, h = 35;
    if (t === 0) { w = 45; h = 40; }       // rock
    else if (t === 1) { w = 55; h = 28; }   // log
    else { w = 32; h = 60; }                // snowman
    obstacles.push({ x: W + 10, type: t, w, h });
  }

  // --- Drawing ---
  function drawSky() {
    const grad = ctx.createLinearGradient(0, 0, 0, ground);
    grad.addColorStop(0, C.skyTop);
    grad.addColorStop(1, C.skyBot);
    ctx.fillStyle = grad;
    ctx.fillRect(0, 0, W, ground);
  }

  function drawMountains() {
    for (const m of mountains) {
      if (m.layer === 0) {
        // Far mountains — lighter
        ctx.fillStyle = C.mountainLight;
        ctx.beginPath();
        ctx.moveTo(m.x, ground);
        ctx.lineTo(m.x + m.w * 0.5, ground - m.h);
        ctx.lineTo(m.x + m.w, ground);
        ctx.closePath();
        ctx.fill();
        // Snow cap
        ctx.fillStyle = C.mountainSnow;
        ctx.beginPath();
        ctx.moveTo(m.x + m.w * 0.35, ground - m.h * 0.6);
        ctx.lineTo(m.x + m.w * 0.5, ground - m.h);
        ctx.lineTo(m.x + m.w * 0.65, ground - m.h * 0.6);
        ctx.closePath();
        ctx.fill();
      } else {
        // Near mountains — darker
        ctx.fillStyle = C.mountain;
        ctx.beginPath();
        ctx.moveTo(m.x, ground);
        ctx.lineTo(m.x + m.w * 0.45, ground - m.h);
        ctx.lineTo(m.x + m.w, ground);
        ctx.closePath();
        ctx.fill();
        // Snow cap
        ctx.fillStyle = C.white;
        ctx.beginPath();
        ctx.moveTo(m.x + m.w * 0.32, ground - m.h * 0.55);
        ctx.lineTo(m.x + m.w * 0.45, ground - m.h);
        ctx.lineTo(m.x + m.w * 0.58, ground - m.h * 0.55);
        ctx.closePath();
        ctx.fill();
      }
    }
  }

  function drawBgTrees() {
    for (const t of bgTrees) {
      const baseY = ground;
      // Trunk
      ctx.fillStyle = C.trunk;
      ctx.fillRect(t.x + t.h * 0.15, baseY - t.h * 0.3, 3, t.h * 0.3);
      // Tree — layered triangles
      const col = t.shade > 0.5 ? C.treeDark : C.treeMid;
      ctx.fillStyle = col;
      // Bottom layer
      ctx.beginPath();
      ctx.moveTo(t.x + t.h * 0.17, baseY - t.h * 0.2);
      ctx.lineTo(t.x - t.h * 0.15, baseY - t.h * 0.2);
      ctx.lineTo(t.x + t.h * 0.17, baseY - t.h * 0.65);
      ctx.lineTo(t.x + t.h * 0.49, baseY - t.h * 0.2);
      ctx.closePath();
      ctx.fill();
      // Top layer
      ctx.fillStyle = t.shade > 0.5 ? C.treeMid : C.treeLight;
      ctx.beginPath();
      ctx.moveTo(t.x + t.h * 0.17, baseY - t.h);
      ctx.lineTo(t.x - t.h * 0.05, baseY - t.h * 0.5);
      ctx.lineTo(t.x + t.h * 0.39, baseY - t.h * 0.5);
      ctx.closePath();
      ctx.fill();
    }
  }

  function drawGround() {
    ctx.fillStyle = C.snow;
    ctx.fillRect(0, ground, W, H - ground);
    // Snow texture
    ctx.fillStyle = C.snowShadow;
    for (const b of bumps) {
      ctx.beginPath();
      ctx.ellipse(b.x, b.y, b.w / 2, b.h / 2, 0, 0, Math.PI * 2);
      ctx.fill();
    }
    // Ground line — soft
    ctx.strokeStyle = C.snowDark;
    ctx.lineWidth = 2;
    ctx.beginPath();
    ctx.moveTo(0, ground);
    ctx.lineTo(W, ground);
    ctx.stroke();
  }

  function drawFlakes() {
    ctx.fillStyle = 'rgba(255,255,255,0.8)';
    for (const f of flakes) {
      ctx.beginPath();
      ctx.arc(f.x, f.y, f.r, 0, Math.PI * 2);
      ctx.fill();
    }
  }

  function drawPlayer() {
    const x = player.x;
    const y = player.y;
    const baseY = y + player.h;

    // Board
    ctx.fillStyle = C.board;
    ctx.beginPath();
    ctx.ellipse(x + 20, baseY - 2, 22, 4, 0, 0, Math.PI * 2);
    ctx.fill();
    ctx.strokeStyle = C.black;
    ctx.lineWidth = 1.5;
    ctx.stroke();

    // Legs
    ctx.fillStyle = C.pants;
    ctx.fillRect(x + 12, y + 28, 7, 16);
    ctx.fillRect(x + 21, y + 28, 7, 16);

    // Torso / jacket
    ctx.fillStyle = C.jacket;
    ctx.fillRect(x + 10, y + 14, 20, 16);

    // Arms — bent forward for speed
    ctx.strokeStyle = C.jacket;
    ctx.lineWidth = 4;
    ctx.lineCap = 'round';
    // Back arm
    ctx.beginPath();
    ctx.moveTo(x + 12, y + 18);
    ctx.lineTo(x + 4, y + 26);
    ctx.stroke();
    // Front arm
    ctx.beginPath();
    ctx.moveTo(x + 28, y + 18);
    ctx.lineTo(x + 36, y + 24);
    ctx.stroke();
    ctx.lineCap = 'butt';

    // Head
    ctx.fillStyle = C.cream;
    ctx.beginPath();
    ctx.arc(x + 20, y + 10, 8, 0, Math.PI * 2);
    ctx.fill();

    // Beanie
    ctx.fillStyle = C.black;
    ctx.beginPath();
    ctx.arc(x + 20, y + 8, 8, Math.PI, 0);
    ctx.fill();
    // Beanie pom
    ctx.beginPath();
    ctx.arc(x + 20, y + 1, 3, 0, Math.PI * 2);
    ctx.fill();

    // Goggles
    ctx.fillStyle = C.goggles;
    ctx.fillRect(x + 14, y + 8, 12, 4);
    ctx.strokeStyle = C.black;
    ctx.lineWidth = 1;
    ctx.strokeRect(x + 14, y + 8, 12, 4);
  }

  function drawObstacle(o: Obstacle) {
    const bx = o.x;
    const by = ground - o.h;

    ctx.strokeStyle = C.black;
    ctx.lineWidth = 1.5;

    if (o.type === 0) {
      // Rock
      ctx.fillStyle = C.rock;
      ctx.beginPath();
      ctx.moveTo(bx + 2, ground);
      ctx.lineTo(bx, by + o.h * 0.3);
      ctx.lineTo(bx + o.w * 0.3, by);
      ctx.lineTo(bx + o.w * 0.7, by + o.h * 0.1);
      ctx.lineTo(bx + o.w, by + o.h * 0.25);
      ctx.lineTo(bx + o.w - 2, ground);
      ctx.closePath();
      ctx.fill();
      ctx.stroke();
      // Highlight
      ctx.fillStyle = C.rockLight;
      ctx.beginPath();
      ctx.moveTo(bx + o.w * 0.3, by);
      ctx.lineTo(bx + o.w * 0.5, by + o.h * 0.3);
      ctx.lineTo(bx + o.w * 0.15, by + o.h * 0.4);
      ctx.lineTo(bx, by + o.h * 0.3);
      ctx.closePath();
      ctx.fill();
      // Snow on top
      ctx.fillStyle = C.white;
      ctx.beginPath();
      ctx.moveTo(bx + 2, by + o.h * 0.25);
      ctx.quadraticCurveTo(bx + o.w * 0.3, by - 4, bx + o.w * 0.5, by + o.h * 0.05);
      ctx.quadraticCurveTo(bx + o.w * 0.7, by - 2, bx + o.w - 4, by + o.h * 0.2);
      ctx.lineTo(bx + o.w * 0.7, by + o.h * 0.1);
      ctx.lineTo(bx + o.w * 0.3, by);
      ctx.closePath();
      ctx.fill();
    } else if (o.type === 1) {
      // Log
      ctx.fillStyle = '#6B4226';
      ctx.beginPath();
      ctx.ellipse(bx + o.w / 2, ground - o.h / 2, o.w / 2, o.h / 2, 0, 0, Math.PI * 2);
      ctx.fill();
      ctx.stroke();
      // End grain
      ctx.fillStyle = '#8B6240';
      ctx.beginPath();
      ctx.ellipse(bx + o.w - 4, ground - o.h / 2, 6, o.h / 2 - 1, 0, 0, Math.PI * 2);
      ctx.fill();
      ctx.strokeStyle = '#5A3420';
      ctx.stroke();
      // Rings
      ctx.strokeStyle = '#5A3420';
      ctx.lineWidth = 0.5;
      ctx.beginPath();
      ctx.ellipse(bx + o.w - 4, ground - o.h / 2, 3, o.h / 4, 0, 0, Math.PI * 2);
      ctx.stroke();
      // Snow dusting
      ctx.fillStyle = C.white;
      ctx.beginPath();
      ctx.ellipse(bx + o.w / 2, ground - o.h + 2, o.w * 0.35, 3, 0, 0, Math.PI * 2);
      ctx.fill();
    } else {
      // Snowman
      ctx.fillStyle = C.white;
      ctx.strokeStyle = C.black;
      ctx.lineWidth = 1.5;
      // Bottom ball
      ctx.beginPath();
      ctx.arc(bx + 12, ground - 10, 10, 0, Math.PI * 2);
      ctx.fill();
      ctx.stroke();
      // Middle ball
      ctx.beginPath();
      ctx.arc(bx + 12, ground - 26, 8, 0, Math.PI * 2);
      ctx.fill();
      ctx.stroke();
      // Head
      ctx.beginPath();
      ctx.arc(bx + 12, ground - 38, 6, 0, Math.PI * 2);
      ctx.fill();
      ctx.stroke();
      // Eyes
      ctx.fillStyle = C.black;
      ctx.beginPath();
      ctx.arc(bx + 10, ground - 39, 1.5, 0, Math.PI * 2);
      ctx.fill();
      ctx.beginPath();
      ctx.arc(bx + 14, ground - 39, 1.5, 0, Math.PI * 2);
      ctx.fill();
      // Nose (carrot)
      ctx.fillStyle = '#E8751A';
      ctx.beginPath();
      ctx.moveTo(bx + 12, ground - 37);
      ctx.lineTo(bx + 19, ground - 36);
      ctx.lineTo(bx + 12, ground - 35);
      ctx.closePath();
      ctx.fill();
      // Arms (sticks)
      ctx.strokeStyle = C.trunk;
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.moveTo(bx + 4, ground - 26);
      ctx.lineTo(bx - 6, ground - 34);
      ctx.stroke();
      ctx.beginPath();
      ctx.moveTo(bx + 20, ground - 26);
      ctx.lineTo(bx + 30, ground - 34);
      ctx.stroke();
    }
  }

  function drawScore() {
    ctx.fillStyle = C.white;
    ctx.font = '700 24px "Bebas Neue", sans-serif';
    ctx.textAlign = 'left';
    const scoreY = Math.max(60, H * 0.08);
    ctx.fillText(String(score).padStart(5, '0'), 20, scoreY);
    if (highScore > 0) {
      ctx.font = '400 14px "Space Mono", monospace';
      ctx.fillText('HI ' + String(highScore).padStart(5, '0'), 20, scoreY + 20);
    }
  }

  function drawGameOver() {
    ctx.fillStyle = 'rgba(26,26,26,0.7)';
    ctx.fillRect(0, 0, W, H);

    ctx.fillStyle = C.salmon;
    ctx.font = '700 48px "Bebas Neue", sans-serif';
    ctx.textAlign = 'center';
    ctx.fillText('WIPEOUT', W / 2, H / 2 - 20);

    ctx.fillStyle = C.cream;
    ctx.font = '400 16px "Space Mono", monospace';
    ctx.fillText('SCORE: ' + score, W / 2, H / 2 + 20);
    const isMobile = 'ontouchstart' in window;
    ctx.fillText(isMobile ? 'TAP TO RETRY' : 'PRESS SPACE TO RETRY', W / 2, H / 2 + 50);
  }

  // --- Collision ---
  function checkCollision(o: Obstacle): boolean {
    const px = player.x + 8;
    const py = player.y + 8;
    const pw = player.w - 16;
    const ph = player.h - 8;
    const ox = o.x;
    const oy = ground - o.h;
    return px < ox + o.w && px + pw > ox && py < oy + o.h && py + ph > oy;
  }

  // --- Update ---
  function update() {
    if (!running || gameOver) return;

    frameCount++;
    if (frameCount % 10 === 0) score++;
    if (frameCount % 500 === 0) speed += 0.5;

    // Player physics
    if (!player.grounded) {
      player.vy += GRAVITY;
      player.y += player.vy;
      if (player.y >= ground - player.h) {
        player.y = ground - player.h;
        player.vy = 0;
        player.grounded = true;
        player.jumping = false;
      }
    }

    // Scroll mountains (parallax)
    for (const m of mountains) {
      m.x -= speed * (m.layer === 0 ? 0.15 : 0.3);
    }
    // Recycle mountains
    for (let i = 0; i < mountains.length; i++) {
      if (mountains[i].x + mountains[i].w < -50) {
        const layer = mountains[i].layer;
        const last = mountains.filter((m2) => m2.layer === layer).pop()!;
        const mw = layer === 0 ? 150 + Math.random() * 200 : 100 + Math.random() * 150;
        const mh = layer === 0 ? 100 + Math.random() * 80 : 60 + Math.random() * 60;
        mountains[i] = { x: Math.max(W, last.x + last.w * 0.6), w: mw, h: mh, layer };
      }
    }

    // Scroll bg trees
    for (const t of bgTrees) {
      t.x -= speed * 0.5;
    }
    if (bgTrees.length > 0 && bgTrees[0].x < -60) {
      bgTrees.shift();
      const last = bgTrees[bgTrees.length - 1];
      bgTrees.push({
        x: (last?.x ?? W) + 30 + Math.random() * 50,
        h: 30 + Math.random() * 40,
        shade: Math.random(),
      });
    }

    // Scroll bumps
    for (const b of bumps) {
      b.x -= speed;
    }
    if (bumps.length > 0 && bumps[0].x + bumps[0].w < 0) {
      bumps.shift();
      const last = bumps[bumps.length - 1];
      bumps.push({
        x: (last?.x ?? W) + 15 + Math.random() * 12,
        y: ground + 8 + Math.random() * 40,
        w: 10 + Math.random() * 12,
        h: 3 + Math.random() * 4,
      });
    }

    // Snowflakes
    for (const f of flakes) {
      f.x += f.vx - speed * 0.2;
      f.y += f.vy;
      if (f.y > H) { f.y = -5; f.x = Math.random() * W; }
      if (f.x < -5) { f.x = W + 5; f.y = Math.random() * H; }
    }

    // Spawn obstacles
    spawnTimer++;
    if (spawnTimer >= nextSpawn) {
      spawnObstacle();
      spawnTimer = 0;
      nextSpawn = SPAWN_INTERVAL_MIN + Math.random() * (SPAWN_INTERVAL_MAX - SPAWN_INTERVAL_MIN);
      nextSpawn = Math.max(40, nextSpawn - speed * 2);
    }

    // Move + check obstacles
    for (let i = obstacles.length - 1; i >= 0; i--) {
      obstacles[i].x -= speed;
      if (checkCollision(obstacles[i])) {
        gameOver = true;
        if (score > highScore) highScore = score;
      }
      if (obstacles[i].x + obstacles[i].w < 0) {
        obstacles.splice(i, 1);
      }
    }
  }

  function draw() {
    ctx.clearRect(0, 0, W, H);
    drawSky();
    drawMountains();
    drawBgTrees();
    drawGround();
    drawFlakes();
    for (const o of obstacles) drawObstacle(o);
    drawPlayer();
    drawScore();
    if (gameOver) drawGameOver();
  }

  function loop() {
    update();
    draw();
    if (running) requestAnimationFrame(loop);
  }

  function jump() {
    if (player.grounded && !gameOver) {
      player.vy = JUMP_FORCE;
      player.grounded = false;
      player.jumping = true;
    }
  }

  function startGame() {
    startScreen.style.display = 'none';
    resize();
    reset();
    running = true;
    loop();
  }

  function handleInput() {
    if (!running) {
      startGame();
    } else if (gameOver) {
      reset();
    } else {
      jump();
    }
  }

  // --- Events ---
  document.addEventListener('keydown', (e) => {
    if (!overlay.classList.contains('active')) return;
    if (e.code === 'Space') {
      e.preventDefault();
      handleInput();
    }
  });

  canvas.addEventListener('click', handleInput);
  canvas.addEventListener('touchstart', (e) => {
    e.preventDefault();
    handleInput();
  }, { passive: false });

  startScreen.addEventListener('click', handleInput);
  startScreen.addEventListener('touchstart', (e) => {
    e.preventDefault();
    handleInput();
  }, { passive: false });

  overlay.addEventListener('touchstart', (e) => {
    if (!overlay.classList.contains('active')) return;
    if ((e.target as HTMLElement).id === 'vespa-close' || (e.target as HTMLElement).id === 'vespa-back') return;
    e.preventDefault();
    handleInput();
  }, { passive: false });

  closeBtn.addEventListener('click', () => {
    running = false;
    overlay.classList.remove('active');
  });

  const backBtn = document.getElementById('vespa-back')!;
  backBtn.addEventListener('click', () => {
    running = false;
    overlay.classList.remove('active');
  });

  overlay.addEventListener('start-game', () => {
    startScreen.style.display = 'flex';
    resize();
    reset();
    draw();
  });

  window.addEventListener('resize', () => {
    if (overlay.classList.contains('active')) {
      resize();
    }
  });

  // Auto-start if on 404 page
  if (document.body.dataset.page === '404') {
    overlay.classList.add('active');
    overlay.style.position = 'relative';
    overlay.style.borderRadius = '0';
    closeBtn.style.display = 'none';
    startScreen.style.display = 'flex';
    resize();
    reset();
    draw();
  }
</script>

<style>
  .overlay {
    display: none;
    position: fixed;
    inset: 0;
    z-index: 1000;
    background: var(--black);
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .overlay.active {
    display: flex;
    opacity: 1;
    touch-action: none;
  }

  .close-btn {
